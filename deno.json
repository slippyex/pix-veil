{
    "compilerOptions": {
        "lib": ["deno.window"],
        "strict": true
    },
    "imports": {
        "@std/assert": "jsr:@std/assert@1",
        "@std/expect": "jsr:@std/expect@^1.0.4",
        "@std/path": "jsr:@std/path@^1.0.6",
        "@std/testing": "jsr:@std/testing@^1.0.3",
        "node:buffer": "npm:buffer@latest"
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 120,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "never",
        "include": ["src/", "tests/"]
    }
}
