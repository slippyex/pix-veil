{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "test": "deno test --allow-read --allow-ffi --allow-write"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/path": "jsr:@std/path@^1.0.6"
  },
  "fmt": {
    "lineWidth": 120,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "indendWidth": 4,
    "arrowParens": "avoid"
  },
  "prettier": {
    "parser": "typescript",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "tabWidth": 4,
    "arrowParens": "avoid"
  }
}
